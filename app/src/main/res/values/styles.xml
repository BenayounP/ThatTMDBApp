<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SNACKBAR -->

    <style name="AppSnackbarTextView" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <!-- TEXTS -->
    <style name="AppTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="movieTitle" parent="@style/AppTextView">
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="movieReleaseDate" parent="@style/AppTextView">
        <item name="android:textSize">@dimen/subtitle_size</item>
    </style>




</resources>
